#!/usr/bin/env bash
# Configures Nginx with a custom HTTP response header on web-01 and web-02

# Function to configure Nginx with custom header
configure_nginx() {
    local hostname=$(hostname)
    cat <<EOF > /etc/nginx/sites-available/default
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    add_header X-Served-By $hostname;
    root   /var/www/html;
    index  index.html index.htm;

    location / {
        try_files \$uri \$uri/ =404;
    }
}
EOF
    systemctl restart nginx
}

# Transfer Nginx configuration from web-01 to web-02
scp ubuntu@web-01:/etc/nginx/sites-available/default /tmp/nginx_default
ssh ubuntu@web-02 "sudo mv /tmp/nginx_default /etc/nginx/sites-available/default && sudo systemctl restart nginx"

# Configure Nginx on web-02
configure_nginx
