
n to display information about a subdomain
print_info() {
    subdomain="$1"
    domain="$2"

    # Using dig to retrieve DNS information for the subdomain
    dig_output=$(dig "$subdomain.$domain" +short)

    # Check if dig_output is not empty (indicating valid DNS records)
    if [ -n "$dig_output" ]; then
        record_type=$(dig "$subdomain.$domain" | awk '/ANSWER SECTION/{getline; print $4}')
        destination=$(dig "$subdomain.$domain" | awk '/ANSWER SECTION/{getline; print $5}')
        echo "The subdomain $subdomain is a $record_type record and points to $destination"
    else
        echo "No valid DNS records found for $subdomain.$domain"
    fi
}

# Main script
main() {
    domain="$1"
    subdomain="$2"

    if [ "$#" -eq 2 ]; then
        print_info "$subdomain" "$domain"
    else
        print_info "www" "$domain"
        print_info "lb-01" "$domain"
        print_info "web-01" "$domain"
        print_info "web-02" "$domain"
    fi
}

# Entry point
main "$@"

